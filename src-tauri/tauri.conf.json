{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "TITANE∞ v17.2",
  "version": "17.2.1",
  "identifier": "com.titane.infinity",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Copyright © 2025 TITANE",
    "category": "DeveloperTool",
    "shortDescription": "Architecture Refactor Complete - 29 Tauri Commands + Legacy Bridge",
    "longDescription": "TITANE∞ v17.2.1 - Complete Backend Architecture Refactor with 40+ Rust modules, 29 Tauri Commands (15 v17.2.0 + 14 legacy bridge), Black Screen Fixes, DevTools Auto-Open, 100% Tauri v2, Production-Ready"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "TITANE∞ v17.0",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": false,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$RESOURCE/**"]
      }
    },
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "title": "TITANE∞"
    }
  },
  "plugins": {
    "shell": {
      "open": false,
      "scope": []
    }
  }
}
